# Production Environment Variables for Hetzner Deployment
# REA INVEST Real Estate Management System

# Database
POSTGRES_PASSWORD=your_super_secure_db_password_here
DATABASE_URL=postgresql://admin:your_super_secure_db_password_here@postgres:5432/rea_invest_prod

# Redis
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379

# JWT Authentication
JWT_SECRET=your_extremely_secure_jwt_secret_key_256_bit_minimum
JWT_EXPIRES_IN=7d

# API Configuration
NODE_ENV=production
API_BASE_URL=https://your-domain.com/api
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Email Configuration (for notifications)
SMTP_HOST=smtp.hetzner.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your_smtp_password

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password

# SSL Certificate Email
CERTBOT_EMAIL=admin@your-domain.com

# Domain Configuration
DOMAIN=your-domain.com
SUBDOMAIN=www.your-domain.com