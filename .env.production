# REA INVEST Production Environment Configuration
# WARNING: Do not commit this file to version control!
# Use environment-specific values and secure secret management.

# Application Environment
NODE_ENV=production

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=rea_invest_prod
DB_USER=postgres
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=YOUR_SUPER_SECURE_JWT_SECRET_KEY_CHANGE_THIS_IN_PRODUCTION
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
USE_REDIS=true
REDIS_URL=redis://:YOUR_REDIS_PASSWORD_HERE@redis:6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE

# Server Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
PORT=8000

# CORS Configuration
CORS_ORIGIN=https://rea-invest.com,https://www.rea-invest.com,https://api.rea-invest.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
MAX_IMAGE_SIZE=52428800

# Cache TTL Configuration (seconds)
CACHE_TTL_PROPERTIES=600
CACHE_TTL_USERS=900
CACHE_TTL_ANALYTICS=1800
CACHE_TTL_SEARCH=300

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.rea-invest.com
NEXTAUTH_URL=https://rea-invest.com
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET_CHANGE_THIS

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=YOUR_GRAFANA_PASSWORD_HERE

# Audit and Logging
AUDIT_RETENTION_DAYS=1825
LOG_LEVEL=info

# External Services (Configure as needed)
SMS_PROVIDER_API_KEY=
SMS_PROVIDER_SECRET=
WHATSAPP_TOKEN=
WHATSAPP_VERIFY_TOKEN=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@rea-invest.com

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl
SSL_KEY_PATH=/etc/nginx/ssl

# Performance Configuration
MAX_CONNECTIONS=1000
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=4096

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3